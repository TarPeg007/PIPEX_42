CC = gcc
CFLAGS = -Wall -Wextra -Werror
SRC = pipex.c pipex_utils.c pipex_utils_2.c libft_function.c libftfunction2.c libftfunction3.c 
OBJS = $(SRC:.c=.o)
LIBC = ar -rcs
NAME = pipex

all: $(NAME) welcome

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

welcome:
